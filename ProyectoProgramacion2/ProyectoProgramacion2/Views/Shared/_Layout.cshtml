@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoProgramacion2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoProgramacion2.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <!-- Logo y Marca -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index" style="padding-left: 15px;">
                    <img src="~/images/logo_sin_fondo.png" alt="Logo Discover Salvador" style="width: 70px; height: 70px;" class="me-3" />
                    <span class="fs-4 fw-bold text-light">Discover El Salvador</span>
                </a>

                <!-- Usuario autenticado -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User?.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="" asp-action="">Cuenta</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Logout">Cerrar sesión</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                else @*Usuario no auntenticado*@
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-3 dropstart">
                            <a class="btn btn-outline-light btn-sm px-4" asp-controller="User" asp-action="Login">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item dropstart">
                            <a class="btn btn-success btn-sm px-4" asp-controller="User" asp-action="Register">Registrarse</a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>


    <!-- Contenido principal -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <!--footer-->
    <footer class="bg-dark text-light text-center py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6>Enlaces Útiles</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-light" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a></li>
                        <li><a class="text-light" href="#">Términos y Condiciones</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Síguenos</h6>
                    <a href="#" class="text-light me-2"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-light me-2"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-light"><i class="bi bi-instagram"></i></a>
                </div>
                <div class="col-md-4">
                    <h6>Contacto</h6>
                    <p class="text-light">Email: contacto@turismo.com</p>
                </div>
            </div>
            <div class="pt-3">
                &copy; 2024 - ProyectoProgramacion2 - <a class="text-light" asp-controller="Home" asp-action="Privacy">Privacidad</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

