@model ProyectoProgramacion2.Models.User.Login;

@{
    ViewData["Title"] = "Login";
}
<div class="row mt-5 justify-content-center rounded-4">
    <div class="col-sm-5">
        <div class="card bg-black text-white">
            <div class="card-header">
                Iniciar Sesion
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="alert-danger rounded"></div>
                    <div class="form-group">
                        <label asp-for="UserEmail">Correo</label>
                        <input asp-for="UserEmail" class="form-control" />
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserPassword">Contraseña</label>
                        <input asp-for="UserPassword" class="form-control" />
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                Recordar credenciales
                            </label>
                        </div>
                    </div>

                    <div class="container text-center">
                        <div class="row">
                            <div class="p-2 col">
                                <button type="submit" class="btn btn-success">Iniciar Sesion</button>
                            </div>
                            <div class="p-2 col">
                                <a class="btn btn-secondary" asp-controller="Users" asp-action="Register">Registrarse</a>
                            </div>
                        </div>
                        <a class="text-decoration-none text-white" href="#">¿Olvidastes tu contraseña?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
