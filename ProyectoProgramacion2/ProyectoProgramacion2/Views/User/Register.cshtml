@model ProyectoProgramacion2.Models.User.Register;
@{
    ViewData["Title"] = "User Registration";
}
<div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
        <div class="card bg-black text-white">
            <div class="card-header">
                Rigistrarse
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="alert-danger rounded"></div>
                    <div class="form-group">
                        <label asp-for="UserEmail">Correo</label>
                        <input asp-for="UserEmail" class="form-control" />
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserPassword">Contraseña</label>
                        <input asp-for="UserPassword" class="form-control" />
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirmar contraseña</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="container text-center">
                        <div class="row">
                            <div class="p-2 col">
                                <button type="submit" class="btn btn-success">Registrarse</button>
                            </div>
                            <div class="p-2 col">
                                <a class="btn btn-secondary" asp-controller="Users" asp-action="Login">Iniciar Sesion</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

